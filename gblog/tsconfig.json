{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "strictNullChecks": true,
        "baseUrl": "src",
        "jsx": "react-jsx",
        "types": ["astro/client"],
        "paths": {
            "@/*": ["*"],
            "@src/*": ["src/*"],
            "@components/*": ["components/*"],
            "@content/*": ["content/*"],
            "@layouts/*": ["layouts/*"],
            "@pages/*": ["pages/*"],
            "@support/*": ["support/*"],
            "@images/*": [
                "images/*"
            ]
        }
    }
}
